# Environment configuration for IFC to Fragments Converter

# Python virtual environment activation script for Windows
# Usage: .\activate_venv.bat

# Database configuration (optional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ifc_fragments
DB_USER=converter
DB_PASSWORD=converter_password

# Converter configuration
CONVERTER_LOG_LEVEL=INFO
CONVERTER_TIMEOUT=300
AUTO_SKIP_EXISTING=true

# Paths
CONVERTER_PACKAGE_PATH=D:/XIFC/frag_convert
SOURCE_DIRECTORY=./data/ifc
OUTPUT_DIRECTORY=./data/fragments

# Node.js configuration
NODE_ENV=production
